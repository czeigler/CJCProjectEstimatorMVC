@model CJCProjectEstimatorMVC.Models.ProjectListViewModel

@{
    ViewBag.Title = "Index";
}

 

 <table class='results'><tr><th class='legend'>Project Name</th><th></th></tr><tbody>

 @foreach (CJCProjectEstimatorMVC.Models.Project project in Model.Projects)
 {
   <tr>
      <td>@project.Name</td>
      <td><a id="removeProject" href="removeProject.php?id=$projectId">[Remove]</a></td>
   </tr>
 }
 </tbody>
 </table>


 <script>
     $(document).ready(function () {
         $('#removeProject').click(function () {
             if (confirm("Are you sure you want to delete this Project?")) {
                 return true;
             }
             return false;
         });

     });
    
</script>