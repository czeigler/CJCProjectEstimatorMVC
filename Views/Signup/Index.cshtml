@model CJCProjectEstimatorMVC.Models.SignupViewModel
@{
    ViewBag.Title = "Sign-up";
}


@{ Html.EnableClientValidation(); }

   <h3><br />Sign up for the CJC Project Estimator</h3>
   <p>It's <strong>free</strong> and we won't spam you.</p>


    <div>@Html.ValidationSummary(true, "The following errors occured while signing up:")</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.UserName)</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.FirstName)</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.LastName)</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.CompanyName)</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.Password)</div>
    <div>@Html.ValidationMessageFor(model => model.AppUserVM.PasswordConfirm)</div>

   
   <div class="fieldset">
    <h4 class="legend">Sign-up</h4>
    @using (Html.BeginForm("Index", "Signup"))
    {

       
        
    <table class="table">
      <tr >
        <td class="firstcoll">User Name:<span class='required'>*</span></td>
        <td>@Html.TextBoxFor(model => model.AppUserVM.UserName, new { maxlength = 40, size = 25 })

        </td>
      </tr>
      <tr >
        <td class="firstcoll">First Name:<span class='required'>*</span></td>
        <td>@Html.TextBoxFor(model => model.AppUserVM.FirstName, new { maxlength = 40, size = 25 })

        </td>
      </tr>
      <tr>
        <td class="firstcoll">Last Name:<span class='required'>*</span></td>
        <td>@Html.TextBoxFor(model => model.AppUserVM.LastName, new { maxlength = 40, size = 25 })

        </td>
      </tr>
      <tr>
        <td class="firstcoll">Company Name: </td>
        <td>@Html.TextBoxFor(model => model.AppUserVM.CompanyName, new { maxlength = 40, size = 25 })

        </td>
      </tr>
      <tr>
        <td class="firstcoll">Password:<span class='required'>*</span></td>
        <td>@Html.PasswordFor(model => model.AppUserVM.Password, new { maxlength = 15, size = 25 })

        </td>
      </tr>
      <tr>
        <td class="firstcoll">Confirm Password:<span class='required'>*</span></td>
        <td>@Html.PasswordFor(model => model.AppUserVM.PasswordConfirm, new { maxlength = 15, size = 25 })

        </td>
      </tr>
      <tr>
        <td class="firstcoll" />
        <td class="submitcoll"><input class="input" type="submit" name="Submit" id="submit" value="Submit" /></td>
      </tr>
    </table>

     
    <span class='required'>* Required Fields</span>
    <p>&nbsp;</p>

    }
    </div>

    <script type="text/javascript">
        $(".field-validation-error").addClass("error-div");
        $(".field-validation-error").parent().addClass("error-div");
        $(".validation-summary-errors").parent().addClass("error-div");
    </script>

